<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_marginTop="2dp"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="#efefef"
        android:text=""
        android:textColor="@color/neon_black"
        android:padding="15dp"
        android:textSize="48sp"
        android:gravity="end|bottom"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        >
        <Button
            android:id="@+id/btnclr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/neon_red"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            app:cornerRadius="35dp"
            android:text="AC"
            android:onClick="clear"
            />
        <Button
            android:id="@+id/btnpower"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/neon_yellowd"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:text="^"
            android:onClick="onOperrator"
            />
        <Button
            android:id="@+id/btnmod"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/neon_yellowd"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:text="%"
            android:onClick="onOperrator"
            />
        <Button
            android:id="@+id/btnadd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/neon_yellowd"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:text="+"
            android:onClick="onOperrator"
            android:textSize="25sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="-5dp"
        >

        <Button
            android:id="@+id/btnseven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/neon_yellow"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:text="7"
            android:onClick="onDigit"
            android:textSize="25sp"
            />
        <Button
            android:id="@+id/btneight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/neon_yellow"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:text="8"
            android:onClick="onDigit"
            android:textSize="25sp"
            />
        <Button
            android:id="@+id/btnnine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/neon_yellow"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:text="9"
            android:onClick="onDigit"
            android:textSize="25sp"
            />
        <Button
            android:id="@+id/btndiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/neon_yellowd"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:text="/"
            android:onClick="onOperrator"
            android:textSize="25sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="-5dp"
        >

        <Button
            android:id="@+id/btnfour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/neon_yellow"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:text="4"
            android:onClick="onDigit"
            android:textSize="25sp"
            />
        <Button
            android:id="@+id/btnfive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/neon_yellow"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:text="5"
            android:onClick="onDigit"
            android:textSize="25sp"
            />
        <Button
            android:id="@+id/btnsix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/neon_yellow"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:text="6"
            android:onClick="onDigit"
            android:textSize="25sp"
            />
        <Button
            android:id="@+id/btnmul"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/neon_yellowd"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:text="*"
            android:onClick="onOperrator"
            android:textSize="25sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="-5dp"
        >

        <Button
            android:id="@+id/btnthree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/neon_yellow"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:text="3"
            android:onClick="onDigit"
            android:textSize="25sp"
            />
        <Button
            android:id="@+id/btntwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/neon_yellow"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:text="2"
            android:onClick="onDigit"
            android:textSize="25sp"
            />
        <Button
            android:id="@+id/btnone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/neon_yellow"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:text="1"
            android:onClick="onDigit"
            android:textSize="25sp"
            />
        <Button
            android:id="@+id/btnsub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/neon_yellowd"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:text="-"
            android:onClick="onOperrator"
            android:textSize="25sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="-5dp"
        >

        <Button
            android:id="@+id/btndot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/neon_yellowd"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:text="."
            android:onClick="decimalpoint"
            android:textSize="25sp"
            />
        <Button
            android:id="@+id/btnzero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/neon_yellow"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:text="0"
            android:onClick="onDigit"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/btnequal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:backgroundTint="@color/neon_blue"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            app:cornerRadius="35dp"
            android:text="="
            android:onClick="onEqual"
            android:textSize="25sp"
            />

    </LinearLayout>



</LinearLayout>